---
import BaseLayout from './BaseLayout.astro';
import type { CodeInfo } from '../data/codes';

interface Props {
  code: CodeInfo;
  funFacts?: { icon: string; text: string }[];
}

const { code, funFacts = [] } = Astro.props;
---
<BaseLayout title={code.title} description={code.metaDescription}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden py-16 md:py-24" style={`background: linear-gradient(135deg, ${code.accentColor}15, ${code.accentColor}08)`}>
    <div class="max-w-content mx-auto px-6 md:px-12">
      <!-- Breadcrumb -->
      <nav class="mb-6 text-sm" aria-label="Breadcrumb">
        <a href="/" class="text-text-secondary hover:text-primary transition-colors">Start</a>
        <span class="mx-2 text-text-secondary">â†’</span>
        <span style={`color: ${code.accentColor}`}>{code.title}</span>
      </nav>

      <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16">
        <div class="flex-1 text-center md:text-left">
          <div class="flex items-center gap-3 mb-4 justify-center md:justify-start">
            <img src={`/icons/${code.slug}.png`} alt={code.title} class="w-12 h-12 object-contain" />
            <div class="flex gap-1">
              {Array.from({length: 3}, (_, i) => (
                <svg class="w-5 h-5" viewBox="0 0 20 20" fill={i < code.difficulty ? code.accentColor : '#E2E8F0'}>
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
          </div>
          <h1 class="font-display font-extrabold text-4xl md:text-5xl mb-4" style={`color: ${code.accentColor}`}>
            {code.title}
          </h1>
          <p class="text-lg text-text-secondary max-w-xl">
            {code.description}
          </p>
        </div>
        <!-- Illustration -->
        <div class="w-48 h-48 md:w-64 md:h-64 rounded-3xl flex items-center justify-center animate-float" style={`background: ${code.accentColor}15`}>
          <img src={`/icons/${code.slug}.png`} alt={code.title} class="w-40 h-40 md:w-56 md:h-56 object-contain" />
        </div>
      </div>
    </div>
  </section>

  <!-- Main content slot -->
  <slot />

  <!-- Fun Facts -->
  {funFacts.length > 0 && (
    <section class="bg-surface-dark py-16 md:py-20">
      <div class="max-w-content mx-auto px-6 md:px-12">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-white text-center mb-10">Wusstest du?</h2>
        <div class="grid sm:grid-cols-2 gap-6 stagger">
          {funFacts.map(fact => (
            <div class="bg-white/5 backdrop-blur rounded-2xl p-6 border border-white/10">
              <span class="text-3xl mb-3 block">{fact.icon}</span>
              <p class="text-sm text-gray-300 leading-relaxed" set:html={fact.text} />
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>
